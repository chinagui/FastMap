	</bean> 
	该调度表示，延迟10秒启动，然后每隔1分钟执行一次。-->
	<!--<bean id="MONITOR_Trigger"
          class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="monitor_alert" />
        <property name="startDelay" value="10000" />
		<property name="repeatInterval" value="60000" />
    </bean>-->
    <!-- 每分钟执行一次，整点分钟执行 -->
    <bean id="poiDayStatics_Trigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="poiDayStatics_detail" />
        <property name="cronExpression" value="0 * * * * ?" />
    </bean>
    <bean id="poiDayStat_Trigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="poiDayStat_detail" />
        <property name="cronExpression" value="0 * * * * ?" />
    </bean>
    <bean id="poiMonthStat_Trigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="poiMonthStat_detail" />
        <property name="cronExpression" value="0 * * * * ?" />
    </bean>
    
    <!--  外业生产时长监控 -->
    <bean id="poiDayStatics_detail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="poiDayStatics" />
        <property name="targetMethod" value="start" />
        <property name="concurrent" value="false" />
    </bean>
    <bean id="poiDayStat_detail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="poiDayStat" />
        <property name="targetMethod" value="start" />
        <property name="concurrent" value="false" />
    </bean>
    <bean id="poiMonthStat_detail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="poiMonthStat" />
        <property name="targetMethod" value="start" />
        <property name="concurrent" value="false" />
    </bean>
   
	<!--  业务逻辑处理类 -->
	<bean id="poiDayStatics" class="com.navinfo.dataservice.engine.statics.launcher.starter.PoiDayStaticsStarter"/>
	<bean id="poiDayStat" class="com.navinfo.dataservice.engine.statics.launcher.starter.PoiDayStatStarter"/>
	<bean id="poiMonthStat" class="com.navinfo.dataservice.engine.statics.launcher.starter.PoiMonthStatStarter"/>
	
	
</beans>
